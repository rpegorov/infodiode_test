# Environment variables for local development

# Sender service
SENDER_SERVICE_NAME=sender
SENDER_SERVICE_VERSION=1.0.0
SENDER_MQTT_BROKER=tcp://localhost:1883
SENDER_MQTT_CLIENT_ID=sender-001
SENDER_MQTT_USERNAME=
SENDER_MQTT_PASSWORD=
SENDER_MQTT_TOPIC=test/messages
SENDER_MQTT_QOS=1
SENDER_MQTT_CLEAN_SESSION=false
SENDER_MQTT_KEEP_ALIVE=60s
SENDER_MQTT_AUTO_RECONNECT=true
SENDER_HTTP_PORT=8080
SENDER_LOGGER_LEVEL=info
SENDER_LOGGER_FILE_PATH=logs/sender.log
SENDER_DATA_PATH=data
SENDER_DATA_GENERATOR_SEED=42
SENDER_METRICS_ENABLED=true

# Recipient service
RECIPIENT_SERVICE_NAME=recipient
RECIPIENT_SERVICE_VERSION=1.0.0
RECIPIENT_MQTT_BROKER=tcp://localhost:1883
RECIPIENT_MQTT_CLIENT_ID=recipient-001
RECIPIENT_MQTT_USERNAME=
RECIPIENT_MQTT_PASSWORD=
RECIPIENT_MQTT_TOPIC=test/messages
RECIPIENT_MQTT_QOS=1
RECIPIENT_MQTT_CLEAN_SESSION=false
RECIPIENT_MQTT_KEEP_ALIVE=60s
RECIPIENT_MQTT_AUTO_RECONNECT=true
RECIPIENT_LOGGER_LEVEL=info
RECIPIENT_LOGGER_FILE_PATH=logs/recipient.log
RECIPIENT_METRICS_ENABLED=true
RECIPIENT_METRICS_PORT=8081

# MQTT Broker (Mosquitto) configuration
MQTT_BROKER_HOST=0.0.0.0
MQTT_BROKER_PORT=1883
MQTT_BROKER_WS_PORT=9001
MQTT_BROKER_LOG_TYPE=all
MQTT_BROKER_LOG_DEST=stdout
MQTT_BROKER_ALLOW_ANONYMOUS=true
MQTT_BROKER_PERSISTENCE=true
MQTT_BROKER_PERSISTENCE_LOCATION=/mosquitto/data
MQTT_BROKER_MAX_INFLIGHT_MESSAGES=100
MQTT_BROKER_MAX_QUEUED_MESSAGES=10000
MQTT_BROKER_MAX_PACKET_SIZE=100000000
MQTT_BROKER_MESSAGE_SIZE_LIMIT=100000000

# Test configuration
TEST_DEFAULT_DURATION=60s
TEST_MAX_DURATION=3600s
TEST_BATCH_THREADS=25,50,100
TEST_STREAM_RATES=100,1000,5000,10000
TEST_LARGE_SIZES_MB=5,10,50,100

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development
DEBUG=false
LOG_FORMAT=json
TZ=UTC

# Infodiode simulation settings (for testing)
# When deployed with real infodiode, sender and recipient will be on different machines
INFODIODE_ENABLED=false
INFODIODE_SENDER_HOST=10.0.1.10
INFODIODE_RECIPIENT_HOST=10.0.2.10
INFODIODE_DIRECTION=sender_to_recipient
